extend layout

block content

  h1 Author: #{title}
  p #{author.dob} to #{author.dod}

  div(style='margin-left:20px;margin-top:20px')
    h3 Books

    dl
      each book in books
        dt
          a(href=book.url) #{book.title}
        dd= book.summary
      else
        p This author has no books yet
